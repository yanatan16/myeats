<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    {{#if title}}
      <title>MyEats - {{title}}</title>
    {{else}}
      <title>MyEats</title> 
    {{/if}}
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="">

    <!-- Le styles -->
    <link href="{{minlib "/tbs/css/bootstrap.css"}}" rel="stylesheet">
    <style type="text/css">
      body {
        padding-top: 60px;
        padding-bottom: 40px;
      }
      .sidebar-nav {
        padding: 9px 0;
      }
    </style>
    <link href="{{minlib "/tbs/css/bootstrap-responsive.css"}}" rel="stylesheet">
    {{{block "stylesheets"}}}

    <!--[if lt IE 9]>
      <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
    <![endif]-->

    <!-- Le fav and touch icons -->
    <link rel="shortcut icon" href="/tbs/ico/favicon.ico">
    <link rel="apple-touch-icon-precomposed" sizes="144x144" href="/tbs/ico/apple-touch-icon-144-precomposed.png">
    <link rel="apple-touch-icon-precomposed" sizes="114x114" href="/tbs/ico/apple-touch-icon-114-precomposed.png">
    <link rel="apple-touch-icon-precomposed" sizes="72x72" href="/tbs/ico/apple-touch-icon-72-precomposed.png">
    <link rel="apple-touch-icon-precomposed" href="/tbs/ico/apple-touch-icon-57-precomposed.png">
  </head>

  <body>

    <div class="navbar navbar-fixed-top">
      <div class="navbar-inner">
        <div class="container-fluid">
          <a class="brand" href="#">MyEats</a>
          <div class="btn-group pull-right">
    	      {{#if everyauth.loggedIn}}
              <a class="btn" href="/logout">
              <i class="icon-user"></i> {{everyauth.google.user.name}}
            {{else}}
              <a class="btn" href="/auth/google">
			        <i class="icon-cog"></i>Log in
            {{/if}}
            </a>
          </div>
        </div>
      </div>
    </div>

    <div id="wrapper" class="container-fluid">
      {{#if error}}
        <div class='alert alert-error'><h4>Error</h4> {{this}} <button href="#" class="close" data-dismiss="alert">&times;</button></div>
      {{/if}}

    	{{{body}}}
      <hr>

      <footer>
        <p>&copy; (c) Jon Eisen 2012</p>
      </footer>

    </div><!--/.fluid-container-->

    <script data-main="{{jslib}}/main" src="{{jslib}}/lib/require.min.js"></script>
    <script>
      require(['main'], function() {
        {{{block "requires"}}}
      });
    </script>

  </body>
</html>

